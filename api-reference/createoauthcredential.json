{
  "type": "api_command",
  "name": "CreateOAuthCredential",
  "description": "Create an OAuth Credential",
  "parameters": [
    {
      "Parameter": "action",
      "Type": "string",
      "Description": "\"CreateOAuthCredential\"",
      "Required": "Required"
    },
    {
      "Parameter": "grantType",
      "Type": "string",
      "Description": "One of 'authorization_code' or 'single_sign_on'",
      "Required": "Required"
    },
    {
      "Parameter": "scope",
      "Type": "string",
      "Description": "A space separated list of valid scopes from tbloauthserver_scopes",
      "Required": "Required"
    },
    {
      "Parameter": "name",
      "Type": "string",
      "Description": "The name to give the oAuth Credential for the authorization_code $grantType",
      "Required": "Optional"
    },
    {
      "Parameter": "serviceId",
      "Type": "int",
      "Description": "The id of the service for the single_sign_on $grantType",
      "Required": "Optional"
    },
    {
      "Parameter": "description",
      "Type": "string",
      "Description": "The description of the OAuth Credential",
      "Required": "Optional"
    },
    {
      "Parameter": "logoUri",
      "Type": "string",
      "Description": "URL or Path Relative to the Base WHMCS Client Area Directory to a logo image file for this application.",
      "Required": "Optional"
    },
    {
      "Parameter": "redirectUri",
      "Type": "string",
      "Description": "Authorised Redirect URIs",
      "Required": "Optional"
    }
  ],
  "source_file": "api-reference/createoauthcredential.md"
